{
    "ServerErrors": {
        "alertDescription": "my server errors",
        "alertSeverity": 3,
        "isEnabled": true,
        "source-type": "Microsoft.EventHub/namespaces",
        "metricName": "ServerErrors",
        "operator": "GreaterThan",        
        "timeAggregation": "Average",
        "windowSize": "PT5M",
        "evaluationFrequency": "PT5M",
        "actionGroupName": "bdevactemailops",
